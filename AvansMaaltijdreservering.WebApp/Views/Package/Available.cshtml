@model IEnumerable<AvansMaaltijdreservering.Core.Domain.Entities.Package>

@{
    ViewData["Title"] = "Available Packages";
}

<div class="container py-4 fade-in-up">
    <!-- Hero Section -->
    <div class="hero-section text-center mb-5">
        <div class="container">
            <h1 class="hero-title">
                <i class="bi bi-heart-fill text-success me-3"></i>
                Save Food, Save Money
            </h1>
            <p class="hero-subtitle">
                Discover delicious meal packages and help reduce food waste at Avans canteens
            </p>
            <div class="row justify-content-center mt-4">
                <div class="col-md-3 text-center">
                    <div class="stats-card">
                        <span class="stats-number">@Model.Count()</span>
                        <div class="stats-label">Available Packages</div>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="stats-card">
                        <span class="stats-number">€@Model.Where(p => !p.IsReserved).Sum(p => p.Price).ToString("F0")</span>
                        <div class="stats-label">Total Value</div>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="stats-card">
                        <span class="stats-number">@Model.GroupBy(p => p.City).Count()</span>
                        <div class="stats-label">Cities</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4 dashboard-card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-funnel me-2"></i>Filter Packages
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="city" class="form-label">
                        <i class="bi bi-geo-alt me-1"></i>City
                    </label>
                    <select name="city" id="city" class="form-select">
                        <option value="">All Cities</option>
                        @foreach (var city in ViewBag.Cities)
                        {
                            <option value="@city" selected="@(ViewBag.SelectedCity?.ToString() == city.ToString())">
                                @city
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="mealType" class="form-label">
                        <i class="bi bi-cup-hot me-1"></i>Meal Type
                    </label>
                    <select name="mealType" id="mealType" class="form-select">
                        <option value="">All Types</option>
                        @foreach (var mealType in ViewBag.MealTypes)
                        {
                            <option value="@mealType" selected="@(ViewBag.SelectedMealType?.ToString() == mealType.ToString())">
                                @mealType
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary d-block w-100">
                        <i class="bi bi-search me-2"></i>Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="card border-0">
                <div class="card-body">
                    <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">No packages found</h4>
                    <p class="text-muted">Try adjusting your filters or check back later for new packages.</p>
                    <a href="@Url.Action("Available")" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Clear Filters
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var package in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card package-card h-100">
                        @if (package.Is18Plus)
                        {
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-warning">
                                    <i class="bi bi-shield-exclamation me-1"></i>18+
                                </span>
                            </div>
                        }
                        
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@package.Name</h5>
                                <span class="badge bg-primary">@package.MealType</span>
                            </div>
                            
                            <div class="flex-grow-1">
                                <div class="mb-3">
                                    <small class="text-muted d-block">
                                        <i class="bi bi-geo-alt me-1"></i>@package.CanteenLocation, @package.City
                                    </small>
                                </div>
                                
                                <div class="row text-center mb-3">
                                    <div class="col-6">
                                        <small class="text-muted d-block">Pickup Time</small>
                                        <strong>@package.PickupTime.ToString("HH:mm")</strong>
                                        <br>
                                        <small>@package.PickupTime.ToString("dd/MM/yyyy")</small>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted d-block">Latest Pickup</small>
                                        <strong>@package.LatestPickupTime.ToString("HH:mm")</strong>
                                        <br>
                                        <small>@package.LatestPickupTime.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </div>

                                @if (package.Products.Any())
                                {
                                    <div class="mb-3">
                                        <small class="text-muted d-block mb-2">
                                            <i class="bi bi-box me-1"></i>May include:
                                        </small>
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var product in package.Products.Take(3))
                                            {
                                                <span class="badge bg-light text-dark border">
                                                    @product.Name
                                                    @if (product.ContainsAlcohol)
                                                    {
                                                        <i class="bi bi-cup ms-1 text-warning"></i>
                                                    }
                                                </span>
                                            }
                                            @if (package.Products.Count() > 3)
                                            {
                                                <span class="badge bg-light text-dark border">
                                                    +@(package.Products.Count() - 3) more
                                                </span>
                                            }
                                        </div>
                                        <small class="text-muted fst-italic d-block mt-1">
                                            <i class="bi bi-info-circle me-1"></i>Actual contents may vary
                                        </small>
                                    </div>
                                }
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div class="price-badge">€@package.Price.ToString("F2")</div>
                                @if (package.IsReserved)
                                {
                                    <span class="badge bg-secondary px-3 py-2">
                                        <i class="bi bi-bookmark-check me-1"></i>Reserved
                                    </span>
                                }
                                else
                                {
                                    <a href="@Url.Action("PackageDetails", "Student", new { id = package.Id })" 
                                       class="btn btn-success btn-sm">
                                        <i class="bi bi-eye me-1"></i>View Details
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        @if (ViewBag.SelectedCity != null || ViewBag.SelectedMealType != null)
        {
            <div class="text-center mt-4">
                <a href="@Url.Action("Available")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-2"></i>Show All Packages
                </a>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        // Auto-submit form on filter change
        document.getElementById('city').addEventListener('change', function() {
            this.form.submit();
        });
        document.getElementById('mealType').addEventListener('change', function() {
            this.form.submit();
        });
    </script>
}