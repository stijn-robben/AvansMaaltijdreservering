<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avans Meal Rescue</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AvansMaaltijdreservering.WebApp.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    
    <header class="flex-shrink-0">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Student"))
                    {
                        <a class="navbar-brand" asp-controller="Students" asp-action="Dashboard">
                            <img src="~/images/logo.png" alt="Logo" class="navbar-logo">
                            Avans Leftovers
                        </a>
                    }
                    else if (User.IsInRole("CanteenEmployee"))
                    {
                        <a class="navbar-brand" asp-controller="Employees" asp-action="Dashboard">
                            <img src="~/images/logo.png" alt="Logo" class="navbar-logo">
                            Avans Meal Rescue
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                            <img src="~/images/logo.png" alt="Logo" class="navbar-logo">
                            Avans Meal Rescue
                        </a>
                    }
                }
                else
                {
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/images/logo.png" alt="Logo" class="navbar-logo">
                        Avans Meal Rescue
                    </a>
                }
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav flex-grow-1">
                        <!-- Spacer to push navigation to the right -->
                        <div class="flex-grow-1"></div>
                        
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Student"))
                            {
                                <a class="nav-link" asp-controller="Students" asp-action="Dashboard">Dashboard</a>
                                <a class="nav-link" asp-controller="Students" asp-action="Reservations">My Reservations</a>
                            }
                            else if (User.IsInRole("CanteenEmployee"))
                            {
                                <a class="nav-link" asp-controller="Employees" asp-action="Dashboard">Dashboard</a>
                                <a class="nav-link" asp-controller="Employees" asp-action="CreatePackage">Create Package</a>
                            }
                        }
                    </div>
                    
                    <div class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <span class="dropdown-item profile-item">Profile</span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item logout-button">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
