@model AvansMaaltijdreservering.WebApp.ViewModels.Students.StudentDashboardViewModel
@{
    ViewData["Title"] = "Available Packages";
}

<div class="container-fluid mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-success text-white p-4 rounded-3 shadow-sm">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="h2 mb-1"><i class="bi bi-house-heart-fill"></i> Welcome back, @Model.Student.Name!</h1>
                        <p class="mb-0 opacity-75">
                            <i class="bi bi-geo-alt"></i> @Model.Student.StudyCity ‚Ä¢ 
                            <i class="bi bi-mortarboard"></i> @Model.Student.StudentNumber
                        </p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <a asp-action="Reservations" class="btn btn-light btn-lg">
                            <i class="bi bi-calendar-check"></i> My Reservations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- US_08: Filtering Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="bi bi-funnel"></i> Filter Available Packages</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Dashboard" method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label"><i class="bi bi-geo-alt"></i> City</label>
                            <select name="filterCity" class="form-select">
                                <option value="0" selected="@(Model.FilterCity == AvansMaaltijdreservering.Core.Domain.Enums.City.BREDA)">Breda</option>
                                <option value="1" selected="@(Model.FilterCity == AvansMaaltijdreservering.Core.Domain.Enums.City.TILBURG)">Tilburg</option>
                                <option value="2" selected="@(Model.FilterCity == AvansMaaltijdreservering.Core.Domain.Enums.City.DENBOSCH)">Den Bosch</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label"><i class="bi bi-cup-hot"></i> Meal Type (Optional)</label>
                            <select name="filterMealType" class="form-select">
                                <option value="">All meal types</option>
                                <option value="0" selected="@(Model.FilterMealType == AvansMaaltijdreservering.Core.Domain.Enums.MealType.Bread)">üçû Bread</option>
                                <option value="1" selected="@(Model.FilterMealType == AvansMaaltijdreservering.Core.Domain.Enums.MealType.WarmEveningMeal)">üçΩÔ∏è Warm Evening Meal</option>
                                <option value="2" selected="@(Model.FilterMealType == AvansMaaltijdreservering.Core.Domain.Enums.MealType.Drink)">ü•§ Drink</option>
                                <option value="3" selected="@(Model.FilterMealType == AvansMaaltijdreservering.Core.Domain.Enums.MealType.Snack)">üçø Snack</option>
                                <option value="4" selected="@(Model.FilterMealType == AvansMaaltijdreservering.Core.Domain.Enums.MealType.Lunch)">ü•™ Lunch</option>
                                <option value="5" selected="@(Model.FilterMealType == AvansMaaltijdreservering.Core.Domain.Enums.MealType.Breakfast)">ü•ê Breakfast</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Filter
                            </button>
                            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Available Packages -->
    <div class="row mb-4">
        <div class="col-12">
            <h3><i class="bi bi-box2-heart"></i> Available Packages (@Model.AvailablePackages.Count())</h3>
            <p class="text-muted mb-4">Showing packages for <strong>@Model.FilterCity</strong> @(Model.FilterMealType.HasValue ? $"‚Ä¢ {Model.FilterMealType}" : "")</p>
        </div>
    </div>

    @if (!Model.AvailablePackages.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="display-1 text-muted mb-3">üçΩÔ∏è</div>
                    <h4 class="text-muted">No packages available</h4>
                    <p class="text-muted">Try adjusting your filters or check back later!</p>
                    <a asp-action="Dashboard" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-clockwise"></i> Reset Filters
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.AvailablePackages)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm @(!item.CanReserve ? "border-warning" : "")">
                        @if (item.Package.ContainsAlcohol())
                        {
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-warning text-dark">üîû 18+</span>
                            </div>
                        }
                        
                        <div class="card-header bg-light">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h6 class="card-title mb-0">@item.Package.Name</h6>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-success fs-6">‚Ç¨@item.Package.Price.ToString("0.00")</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt-fill"></i> @item.Package.City ‚Ä¢ @item.Package.CanteenLocation.ToString().Replace("_", " ")
                                </small>
                            </div>
                            
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-clock-fill"></i> Pick up: <strong>@item.Package.PickupTime.ToString("ddd dd MMM, HH:mm")</strong>
                                </small>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-clock-history"></i> Latest: @item.Package.LatestPickupTime.ToString("HH:mm")
                                </small>
                            </div>

                            <!-- US_06: Product Information -->
                            @if (item.Package.Products.Any())
                            {
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1">
                                        <i class="bi bi-list-ul"></i> Example products:
                                    </small>
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var product in item.Package.Products.Take(3))
                                        {
                                            <span class="badge bg-light text-dark border">
                                                @if (product.ContainsAlcohol)
                                                {
                                                    <span>üç∑</span>
                                                }
                                                @product.Name
                                            </span>
                                        }
                                        @if (item.Package.Products.Count() > 3)
                                        {
                                            <span class="badge bg-light text-muted border">+@(item.Package.Products.Count() - 3) more</span>
                                        }
                                    </div>
                                    <small class="text-muted fst-italic d-block mt-1">
                                        <i class="bi bi-info-circle"></i> Products may vary - no guarantee for exact contents
                                    </small>
                                </div>
                            }

                            <!-- US_04, US_07, US_10: Eligibility Status -->
                            @if (!item.CanReserve && !string.IsNullOrEmpty(item.IneligibilityReason))
                            {
                                <div class="alert alert-warning py-2 mb-0">
                                    <small>@item.IneligibilityReason</small>
                                </div>
                            }
                        </div>
                        
                        <div class="card-footer bg-transparent">
                            @if (item.CanReserve)
                            {
                                <div class="d-grid gap-2 d-md-flex">
                                    <a asp-action="PackageDetails" asp-route-id="@item.Package.Id" class="btn btn-outline-primary flex-fill">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <form asp-action="ReservePackage" method="post" class="flex-fill">
                                        <input type="hidden" name="packageId" value="@item.Package.Id" />
                                        <button type="submit" class="btn btn-success w-100" 
                                                onclick="return confirm('Reserve this package?')">
                                            <i class="bi bi-plus-circle"></i> Reserve
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="d-grid">
                                    <a asp-action="PackageDetails" asp-route-id="@item.Package.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>